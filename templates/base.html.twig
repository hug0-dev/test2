{% extends 'base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des équipes</h1>
        <a href="{{ path('app_equipe_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle équipe
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom de l'équipe</th>
                            <th>Chef d'équipe</th>
                            <th>Nombre de membres</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for equipe in equipes %}
                            <tr>
                                <td>{{ equipe.id }}</td>
                                <td>{{ equipe.nomEquipe }}</td>
                                <td>
                                    {% if equipe.chefEquipe %}
                                        {{ equipe.chefEquipe.nom }}
                                    {% else %}
                                        <span class="text-muted">Aucun chef</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ equipe.nombre }} membre(s)</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" 
                                           class="btn btn-sm btn-outline-info">
                                            Voir
                                        </a>
                                        <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            Modifier
                                        </a>
                                        <form method="post" action="{{ path('app_equipe_delete', {'id': equipe.id}) }}" 
                                              class="d-inline" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">Aucune équipe trouvée</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}