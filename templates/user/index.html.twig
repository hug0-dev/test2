{% extends 'base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des équipes</h1>
        <a href="{{ path('app_equipe_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvelle équipe
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom de l'équipe</th>
                            <th>Chef d'équipe</th>
                            <th>Membres</th>
                            <th>Compétences disponibles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for equipe in equipes %}
                            <tr>
                                <td>{{ equipe.id }}</td>
                                <td>
                                    <strong>{{ equipe.nomEquipe }}</strong>
                                </td>
                                <td>
                                    {% if equipe.chefEquipe %}
                                        <span class="badge bg-warning">{{ equipe.chefEquipe.nom }}</span>
                                    {% else %}
                                        <span class="text-muted">Aucun chef</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-info">{{ equipe.nombre }} membre(s)</span>
                                    {% if equipe.membres|length > 0 %}
                                        <div class="mt-1">
                                            {% for membre in equipe.membres %}
                                                <small class="badge bg-secondary me-1">{{ membre.nom }}</small>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if equipe.competenceEquipe|length > 0 %}
                                        <div class="d-flex flex-wrap gap-1">
                                            {% for competence in equipe.competenceEquipe %}
                                                <span class="badge bg-success">{{ competence }}</span>
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <span class="text-muted">Aucune compétence</span>
                                        <small class="text-muted d-block">Assignez des membres à l'équipe</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_equipe_delete', {'id': equipe.id}) }}" 
                                              class="d-inline" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted">Aucune équipe trouvée</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% if equipes|length > 0 %}
    <div class="alert alert-info mt-4">
        <h6><i class="fas fa-info-circle me-2"></i>Comment ça fonctionne :</h6>
        <ul class="mb-0">
            <li><strong>Membres :</strong> Assignez des ouvriers à une équipe via la gestion des utilisateurs</li>
            <li><strong>Compétences :</strong> Calculées automatiquement selon les compétences des membres</li>
            <li><strong>Nombre :</strong> Mis à jour automatiquement selon le nombre de membres</li>
        </ul>
    </div>
    {% endif %}
</div>
{% endblock %}