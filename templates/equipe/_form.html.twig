{{ form_start(form) }}

<div class="mb-3">
    {{ form_label(form.nom_equipe) }}
    {{ form_widget(form.nom_equipe, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.nom_equipe) }}
</div>

<div class="mb-3">
    {{ form_label(form.nombre) }}
    {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.nombre) }}
</div>

<div class="mb-3">
    {{ form_label(form.chef_equipe) }}
    {{ form_widget(form.chef_equipe, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.chef_equipe) }}
</div>

<div class="mb-3">
    {{ form_label(form.competance_equipe) }}
    <div class="row">
        {% for competance in form.competance_equipe %}
            <div class="col-md-4">
                <div class="form-check">
                    {{ form_widget(competance, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(competance, null, {'attr': {'class': 'form-check-label'}}) }}
                </div>
            </div>
        {% endfor %}
    </div>
    {{ form_errors(form.competance_equipe) }}
</div>

<button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}