{% extends 'base.html.twig' %}

{% block title %}Liste des √âquipes{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Header avec titre et bouton -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h2 class="text-center mb-0">
                üèóÔ∏è Liste des √âquipes
            </h2>
        </div>
    </div>
    
    <!-- Bouton ajouter -->
    <div class="row mb-4">
        <div class="col-12 text-end">
            <a href="{{ path('app_equipe_new') }}" class="btn btn-success">
                Ajouter une √âquipe
            </a>
        </div>
    </div>

    <!-- Liste des √©quipes -->
    {% if equipes|length > 0 %}
        <div class="row">
            {% for equipe in equipes %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary">
                                {{ equipe.nomEquipe }}
                            </h5>
                            
                            <p class="card-text">
                                <strong>Membres :</strong> {{ equipe.nombre }}<br>
                                <strong>Chef :</strong> 
                                {% if equipe.chefEquipe %}
                                    {{ equipe.chefEquipe.nom }}
                                {% else %}
                                    <span class="text-muted">Non assign√©</span>
                                {% endif %}
                            </p>
                            
                            {% if equipe.competanceEquipe|length > 0 %}
                                <div class="mb-3">
                                    <strong>Comp√©tences :</strong><br>
                                    {% for competence in equipe.competanceEquipe %}
                                        <span class="badge bg-secondary me-1 mb-1">{{ competence }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <div class="text-center">
                                <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" 
                                   class="btn btn-outline-info btn-sm me-2">
                                    D√©tails
                                </a>
                                <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" 
                                   class="btn btn-outline-warning btn-sm">
                                    Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="row">
            <div class="col-12 text-center">
                <p class="text-muted">üöß Aucune √©quipe disponible.</p>
            </div>
        </div>
    {% endif %}
</div>

<style>
.card {
    transition: transform 0.2s ease;
}

.card:hover {
    transform: translateY(-2px);
}
</style>
{% endblock %}