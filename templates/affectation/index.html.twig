<!-- templates/affectation/show.html.twig -->
{% extends 'base.html.twig' %}

{% block title %}Affectation #{{ affectation.id }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Détails de l'affectation</h1>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ affectation.nom ?? 'Affectation #' ~ affectation.id }}</h5>
            
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Utilisateur:</strong> {{ affectation.user.nom }}</p>
                    <p><strong>Équipe:</strong> {{ affectation.equipe.nomEquipe }}</p>
                    <p><strong>Chantier:</strong> {{ affectation.chantier.nom }}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Date début:</strong> {{ affectation.dateDebut|date('d/m/Y') }}</p>
                    <p><strong>Date fin:</strong> {{ affectation.dateFin|date('d/m/Y') }}</p>
                    <p><strong>Durée:</strong> {{ affectation.dateDebut.diff(affectation.dateFin).days }} jours</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" class="btn btn-warning">Modifier</a>
        <a href="{{ path('app_affectation_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div>
{% endblock %}

