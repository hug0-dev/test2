{% extends 'base.html.twig' %}

{% block title %}Dashboard Ouvrier{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Dashboard Ouvrier</h1>
            <p>Bienvenue {{ user.nom }} !</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mes Affectations</h5>
                    <p class="card-text">Consultez vos affectations en cours et à venir.</p>
                    <a href="{{ path('app_ouvrier_affectations') }}" class="btn btn-primary">Voir mes affectations</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mon Profil</h5>
                    <p class="card-text">Consultez et modifiez vos informations personnelles.</p>
                    <a href="{{ path('app_ouvrier_profil') }}" class="btn btn-secondary">Voir mon profil</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mes Compétences</h5>
                    <p class="card-text">
                        {% set competences = user.competences %}
                        {% if competences|length > 0 %}
                            {{ competences|join(', ') }}
                        {% else %}
                            Aucune compétence définie
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}