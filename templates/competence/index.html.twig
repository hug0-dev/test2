<!-- templates/competence/index.html.twig -->
{% extends 'base.html.twig' %}

{% block title %}Gestion des Compétences{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion des Compétences</h1>
    
    <div class="mb-3">
        <a href="{{ path('app_competence_new') }}" class="btn btn-primary">Nouvelle Compétence</a>
        <a href="{{ path('app_competence_init') }}" class="btn btn-success">Initialiser compétences de base</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Statut</th>
                    <th>Utilisateurs</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for competence in competences %}
                    <tr>
                        <td>{{ competence.id }}</td>
                        <td>{{ competence.nom }}</td>
                        <td>{{ competence.description ?? '-' }}</td>
                        <td>
                            {% if competence.isActif %}
                                <span class="badge bg-success">Actif</span>
                            {% else %}
                                <span class="badge bg-secondary">Inactif</span>
                            {% endif %}
                        </td>
                        <td>{{ competence.userCompetences|length }}</td>
                        <td>
                            <a href="{{ path('app_competence_edit', {'id': competence.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
                            <form method="post" action="{{ path('app_competence_delete', {'id': competence.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de supprimer cette compétence ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competence.id) }}">
                                <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucune compétence trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

<!-- templates/competence/new.html.twig -->
{% extends 'base.html.twig' %}

{% block title %}Nouvelle Compétence{% endblock %}

{% block body %}
<div class="container">
    <h1>Créer une nouvelle compétence</h1>
    
    <form method="post">
        <div class="mb-3">
            <label for="nom" class="form-label">Nom de la compétence</label>
            <input type="text" class="form-control" id="nom" name="nom" required>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description (optionnel)</label>
            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Créer</button>
            <a href="{{ path('app_competence_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>
{% endblock %}

<!-- templates/competence/edit.html.twig -->
{% extends 'base.html.twig' %}

{% block title %}Modifier Compétence{% endblock %}

{% block body %}
<div class="container">
    <h1>Modifier la compétence "{{ competence.nom }}"</h1>
    
    <form method="post">
        <div class="mb-3">
            <label for="nom" class="form-label">Nom de la compétence</label>
            <input type="text" class="form-control" id="nom" name="nom" value="{{ competence.nom }}" required>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description (optionnel)</label>
            <textarea class="form-control" id="description" name="description" rows="3">{{ competence.description }}</textarea>
        </div>
        
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="actif" name="actif" value="1" {% if competence.isActif %}checked{% endif %}>
                <label class="form-check-label" for="actif">
                    Compétence active
                </label>
            </div>
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Modifier</button>
            <a href="{{ path('app_competence_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>
{% endblock %}