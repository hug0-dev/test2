{% extends 'base.html.twig' %}

{% block title %}Dashboard Ouvrier{% endblock %}

{% block body %}
<div class="container">
    <h1>Bienvenue {{ user.nom }}</h1>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mes Affectations</h5>
                    <p class="card-text">Consultez vos affectations en cours et à venir.</p>
                    <a href="{{ path('app_ouvrier_affectations') }}" class="btn btn-primary">Voir mes affectations</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mon Profil</h5>
                    <p class="card-text">Consultez vos informations et compétences.</p>
                    <a href="{{ path('app_ouvrier_profil') }}" class="btn btn-secondary">Voir mon profil</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mon Équipe</h5>
                    <p class="card-text">
                        {% if user.equipe %}
                            Vous faites partie de l'équipe <strong>{{ user.equipe.nomEquipe }}</strong>
                        {% else %}
                            Vous n'êtes assigné à aucune équipe actuellement.
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}