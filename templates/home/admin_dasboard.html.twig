<!-- templates/home/admin_dashboard.html.twig -->
{% extends 'base.html.twig' %}

{% block title %}Dashboard Administrateur{% endblock %}

{% block body %}
<div class="container">
    <h1>Dashboard Administrateur</h1>
    <p class="lead">Bienvenue {{ user.nom }}, vous êtes connecté en tant qu'administrateur.</p>
    
    <div class="row">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">👥 Utilisateurs</h5>
                    <p class="card-text">Gérer les utilisateurs et leurs compétences</p>
                    <a href="{{ path('app_user_index') }}" class="btn btn-primary">Gérer</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">🏗️ Chantiers</h5>
                    <p class="card-text">Créer et gérer les chantiers</p>
                    <a href="{{ path('app_chantier_index') }}" class="btn btn-primary">Gérer</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">👷 Équipes</h5>
                    <p class="card-text">Organiser les équipes</p>
                    <a href="{{ path('app_equipe_index') }}" class="btn btn-primary">Gérer</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">📋 Affectations</h5>
                    <p class="card-text">Assigner les équipes aux chantiers</p>
                    <a href="{{ path('app_affectation_index') }}" class="btn btn-primary">Gérer</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">🛠️ Compétences</h5>
                    <p class="card-text">Gérer les compétences disponibles</p>
                    <a href="{{ path('app_competence_index') }}" class="btn btn-secondary">Gérer les compétences</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">➕ Actions rapides</h5>
                    <p class="card-text">Créer rapidement</p>
                    <a href="{{ path('app_register') }}" class="btn btn-success me-2">Nouvel utilisateur</a>
                    <a href="{{ path('app_chantier_new') }}" class="btn btn-warning">Nouveau chantier</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}