{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mon profil</h1>
        <a href="{{ path('app_ouvrier_dashboard') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au dashboard
        </a>
    </div>

    <div class="row">
        <!-- Informations personnelles -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5><i class="fas fa-user me-2"></i>Informations personnelles</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nom :</label>
                        <p class="mb-0">{{ user.nom }}</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email :</label>
                        <p class="mb-0">{{ user.email }}</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Statut :</label>
                        <span class="badge bg-success">Ouvrier</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Équipe -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5><i class="fas fa-users me-2"></i>Mon équipe</h5>
                </div>
                <div class="card-body">
                    {% if user.equipe %}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Équipe :</label>
                            <p class="mb-0">{{ user.equipe.nomEquipe }}</p>
                        </div>
                        
                        {% if user.equipe.chefEquipe %}
                            <div class="mb-3">
                                <label class="form-label fw-bold">Chef d'équipe :</label>
                                <p class="mb-0">
                                    {{ user.equipe.chefEquipe.nom }}
                                    {% if user.equipe.chefEquipe.id == user.id %}
                                        <span class="badge bg-warning ms-2">Vous</span>
                                    {% endif %}
                                </p>
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre de membres :</label>
                            <p class="mb-0">{{ user.equipe.nombre }}</p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Membres de l'équipe :</label>
                            <ul class="list-unstyled mt-2">
                                {% for membre in user.equipe.membres %}
                                    <li class="mb-1">
                                        <i class="fas fa-user me-2"></i>{{ membre.nom }}
                                        {% if membre.id == user.id %}
                                            <span class="badge bg-primary ms-2">Vous</span>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <div class="text-center text-muted">
                            <i class="fas fa-users fa-2x mb-3"></i>
                            <p>Vous n'êtes assigné à aucune équipe</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Compétences -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-tools me-2"></i>Mes compétences</h5>
                </div>
                <div class="card-body">
                    {% if user.competences %}
                        <div class="d-flex flex-wrap gap-2">
                            {% for competence in user.competences %}
                                <span class="badge bg-success fs-6 px-3 py-2">{{ competence }}</span>
                            {% endfor %}
                        </div>
                        <hr>
                        <small class="text-muted">
                            Total : {{ user.competences|length }} compétence(s)
                        </small>
                    {% else %}
                        <div class="text-center text-muted">
                            <i class="fas fa-tools fa-2x mb-3"></i>
                            <p>Aucune compétence définie</p>
                            <small>Contactez votre administrateur pour ajouter vos compétences</small>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Compétences de l'équipe (si applicable) -->
    {% if user.equipe and user.equipe.competenceEquipe %}
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-users-cog me-2"></i>Compétences de mon équipe</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        {% for competence in user.equipe.competenceEquipe %}
                            <span class="badge bg-secondary fs-6 px-3 py-2">{{ competence }}</span>
                        {% endfor %}
                    </div>
                    <hr>
                    <small class="text-muted">
                        Ces sont toutes les compétences disponibles dans votre équipe
                    </small>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}