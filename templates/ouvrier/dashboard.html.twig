{% extends 'base.html.twig' %}

{% block title %}Dashboard Ouvrier{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- En-tête de bienvenue -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-hard-hat fa-3x"></i>
                        </div>
                        <div>
                            <h2 class="mb-1">Bonjour {{ user.nom }} !</h2>
                            <p class="mb-0">Bienvenue sur votre espace ouvrier</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Informations personnelles -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5><i class="fas fa-user me-2"></i>Mes informations</h5>
                </div>
                <div class="card-body">
                    <p><strong>Nom :</strong> {{ user.nom }}</p>
                    <p><strong>Email :</strong> {{ user.email }}</p>
                    <p><strong>Équipe :</strong> 
                        {% if user.equipe %}
                            <span class="badge bg-info">{{ user.equipe.nomEquipe }}</span>
                        {% else %}
                            <span class="text-muted">Aucune équipe assignée</span>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5><i class="fas fa-tools me-2"></i>Mes compétences</h5>
                </div>
                <div class="card-body">
                    {% if user.competences %}
                        <div class="d-flex flex-wrap gap-2">
                            {% for competence in user.competences %}
                                <span class="badge bg-success">{{ competence }}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted mb-0">Aucune compétence définie</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Menu d'actions -->
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-calendar-alt fa-2x text-primary mb-3"></i>
                    <h5 class="card-title">Mes affectations</h5>
                    <p class="card-text">Consulter mes affectations aux chantiers</p>
                    <a href="{{ path('app_ouvrier_affectations') }}" class="btn btn-primary">
                        Voir mes affectations
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-user-circle fa-2x text-success mb-3"></i>
                    <h5 class="card-title">Mon profil</h5>
                    <p class="card-text">Consulter mes informations personnelles</p>
                    <a href="{{ path('app_ouvrier_profil') }}" class="btn btn-success">
                        Voir mon profil
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-building fa-2x text-info mb-3"></i>
                    <h5 class="card-title">Chantiers</h5>
                    <p class="card-text">Consulter la liste des chantiers</p>
                    <a href="{{ path('app_chantier_index') }}" class="btn btn-info">
                        Voir les chantiers
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Informations sur l'équipe (si assigné) -->
    {% if user.equipe %}
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-users me-2"></i>Mon équipe : {{ user.equipe.nomEquipe }}</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Membres de l'équipe :</h6>
                            <ul class="list-unstyled">
                                {% for membre in user.equipe.membres %}
                                    <li>
                                        <i class="fas fa-user me-2"></i>{{ membre.nom }}
                                        {% if user.equipe.chefEquipe and membre.id == user.equipe.chefEquipe.id %}
                                            <span class="badge bg-warning ms-2">Chef d'équipe</span>
                                        {% endif %}
                                        {% if membre.id == user.id %}
                                            <span class="badge bg-primary ms-2">Vous</span>
                                        {% endif %}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Compétences de l'équipe :</h6>
                            <div class="d-flex flex-wrap gap-1">
                                {% for competence in user.equipe.competenceEquipe %}
                                    <span class="badge bg-secondary">{{ competence }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}