{% extends 'base.html.twig' %}

{% block title %}Gestion des Affectations{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Gestion des Affectations</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Liste des Affectations</h5>
                </div>
                <div class="card-body">
                    {% if affectations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Utilisateur</th>
                                        <th>Chantier</th>
                                        <th>Équipe</th>
                                        <th>Date début</th>
                                        <th>Date fin</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for affectation in affectations %}
                                        <tr>
                                            <td>{{ affectation.nom ?? 'Sans nom' }}</td>
                                            <td>
                                                {% if affectation.user %}
                                                    {{ affectation.user.nom }}
                                                    <small class="text-muted d-block">{{ affectation.user.email }}</small>
                                                {% else %}
                                                    <span class="text-muted">Aucun utilisateur</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ affectation.chantier ? affectation.chantier.nom : 'Aucun chantier' }}</td>
                                            <td>{{ affectation.equipe ? affectation.equipe.nomEquipe : 'Aucune équipe' }}</td>
                                            <td>{{ affectation.dateDebut ? affectation.dateDebut|date('d/m/Y') : 'Non définie' }}</td>
                                            <td>{{ affectation.dateFin ? affectation.dateFin|date('d/m/Y') : 'Non définie' }}</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="{{ path('app_affectation_show', {'id': affectation.id}) }}" 
                                                       class="btn btn-outline-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" 
                                                       class="btn btn-outline-warning">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <h5>Aucune affectation</h5>
                            <p>Il n'y a encore aucune affectation créée.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Chantiers disponibles</h5>
                </div>
                <div class="card-body">
                    {% if chantiers|length > 0 %}
                        {% for chantier in chantiers %}
                            <div class="card mb-2">
                                <div class="card-body py-2">
                                    <h6 class="card-title mb-1">{{ chantier.nom }}</h6>
                                    <small class="text-muted">
                                        Effectif requis : {{ chantier.effectifRequis }}<br>
                                        Du {{ chantier.dateDebut|date('d/m/Y') }} au {{ chantier.dateFin|date('d/m/Y') }}
                                    </small>
                                    <div class="mt-2">
                                        <a href="{{ path('app_affectation_new', {'id': chantier.id}) }}" 
                                           class="btn btn-primary btn-sm">
                                            <i class="fas fa-plus"></i> Nouvelle affectation
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-warning">
                            <p class="mb-0">Aucun chantier disponible.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}