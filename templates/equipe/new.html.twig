{% extends 'base.html.twig' %}

{% block title %}Nouvelle équipe{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Créer une nouvelle équipe</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom_equipe) }}
                            {{ form_widget(form.nom_equipe, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom_equipe) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.chef_equipe) }}
                            {{ form_widget(form.chef_equipe, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.chef_equipe) }}
                        </div>

                        <div class="alert alert-info">
                            <strong>ℹ️ Information :</strong> 
                            <ul class="mb-0">
                                <li>Le <strong>nombre de membres</strong> sera calculé automatiquement</li>
                                <li>Les <strong>compétences</strong> seront basées sur celles des membres assignés</li>
                                <li>Assignez des ouvriers à cette équipe via la gestion des utilisateurs</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Créer l'équipe
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}