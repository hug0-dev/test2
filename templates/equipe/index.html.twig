{% extends 'base.html.twig' %}

{% block title %}Gestion des Équipes{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Gestion des Équipes</h1>
            <a href="{{ path('app_equipe_new') }}" class="btn btn-success mb-3">
                <i class="fas fa-plus"></i> Nouvelle équipe
            </a>
        </div>
    </div>

    <div class="row">
        {% if equipes|length > 0 %}
            {% for equipe in equipes %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">{{ equipe.nomEquipe }}</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Nombre de membres :</strong> {{ equipe.nombre }}<br>
                                <strong>Chef d'équipe :</strong> 
                                {% if equipe.chefEquipe %}
                                    {{ equipe.chefEquipe.nom }}
                                    <small class="text-muted">({{ equipe.chefEquipe.email }})</small>
                                {% else %}
                                    <span class="text-muted">Aucun chef assigné</span>
                                {% endif %}
                            </p>
                            
                            {% if equipe.competanceEquipe|length > 0 %}
                                <p class="card-text">
                                    <strong>Compétences :</strong><br>
                                    {% for competence in equipe.competanceEquipe %}
                                        <span class="badge bg-primary me-1 mb-1">{{ competence }}</span>
                                    {% endfor %}
                                </p>
                            {% endif %}
                        </div>
                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" 
                                   class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" 
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <h4>Aucune équipe</h4>
                    <p>Il n'y a encore aucune équipe créée.</p>
                    <a href="{{ path('app_equipe_new') }}" class="btn btn-success">
                        Créer la première équipe
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}