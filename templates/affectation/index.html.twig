<!-- templates/affectation/index.html.twig -->
{% extends 'base.html.twig' %}

{% block title %}Gestion des Affectations{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion des Affectations</h1>
    
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Chantiers disponibles</h5>
                </div>
                <div class="card-body">
                    {% if chantiers|length > 0 %}
                        {% for chantier in chantiers %}
                            <div class="border-bottom pb-2 mb-2">
                                <strong>{{ chantier.nom }}</strong><br>
                                <small class="text-muted">
                                    Du {{ chantier.dateDebut|date('d/m/Y') }} au {{ chantier.dateFin|date('d/m/Y') }}<br>
                                    Effectif requis: {{ chantier.effectifRequis }} - Restant: {{ chantier.effectifRestant }}
                                </small><br>
                                <a href="{{ path('app_affectation_new', {'id': chantier.id}) }}" class="btn btn-sm btn-primary">Affecter équipe</a>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted">Aucun chantier disponible</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Utilisateur</th>
                    <th>Équipe</th>
                    <th>Chantier</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for affectation in affectations %}
                    <tr>
                        <td>{{ affectation.id }}</td>
                        <td>{{ affectation.nom ?? 'Non spécifié' }}</td>
                        <td>{{ affectation.user.nom }}</td>
                        <td>{{ affectation.equipe.nomEquipe }}</td>
                        <td>{{ affectation.chantier.nom }}</td>
                        <td>{{ affectation.dateDebut|date('d/m/Y') }}</td>
                        <td>{{ affectation.dateFin|date('d/m/Y') }}</td>
                        <td>
                            {% set today = date() %}
                            {% if affectation.dateDebut > today %}
                                <span class="badge bg-info">À venir</span>
                            {% elseif affectation.dateFin < today %}
                                <span class="badge bg-secondary">Terminé</span>
                            {% else %}
                                <span class="badge bg-success">En cours</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_affectation_show', {'id': affectation.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                            <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                            <form method="post" action="{{ path('app_affectation_delete', {'id': affectation.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de supprimer cette affectation ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ affectation.id) }}">
                                <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center">Aucune affectation trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

