{% extends 'base.html.twig' %}

{% block title %}Mes affectations{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mes affectations</h1>
        <a href="{{ path('app_ouvrier_dashboard') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour au dashboard
        </a>
    </div>

    {% if affectations %}
        <div class="row">
            {% for affectation in affectations %}
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">{{ affectation.chantier.nom }}</h5>
                            <span class="badge bg-primary">{{ affectation.equipe.nomEquipe }}</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="mb-1"><strong>Dates :</strong></p>
                                    <p class="text-muted">
                                        Du {{ affectation.chantier.dateDebut|date('d/m/Y') }} 
                                        au {{ affectation.chantier.dateFin|date('d/m/Y') }}
                                    </p>
                                </div>
                                <div class="col-sm-6">
                                    <p class="mb-1"><strong>Équipe :</strong></p>
                                    <p class="text-muted">{{ affectation.equipe.nomEquipe }}</p>
                                    <small class="text-muted">{{ affectation.equipe.nombre }} membre(s)</small>
                                </div>
                            </div>
                            
                            {% if affectation.chantier.chantierPrerequis %}
                                <div class="mt-3">
                                    <p class="mb-1"><strong>Compétences requises :</strong></p>
                                    <div class="d-flex flex-wrap gap-1">
                                        {% for competence in affectation.chantier.chantierPrerequis %}
                                            <span class="badge bg-secondary">{{ competence }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            {% if affectation.chantier.chefChantier %}
                                <div class="mt-3">
                                    <p class="mb-1"><strong>Chef de chantier :</strong></p>
                                    <p class="text-muted mb-0">{{ affectation.chantier.chefChantier.nom }}</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Aucune affectation</h4>
            <p class="text-muted">Vous n'êtes actuellement affecté à aucun chantier.</p>
        </div>
    {% endif %}
</div>
{% endblock %}