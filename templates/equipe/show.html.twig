{% extends 'base.html.twig' %}

{% block title %}Détails de l'Équipe{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">{{ equipe.nomEquipe }}</h1>
            <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary mb-3">← Retour à la liste</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informations de l'équipe</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th>Nom de l'équipe :</th>
                            <td>{{ equipe.nomEquipe }}</td>
                        </tr>
                        <tr>
                            <th>Nombre de membres :</th>
                            <td>{{ equipe.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Chef d'équipe :</th>
                            <td>
                                {% if equipe.chefEquipe %}
                                    {{ equipe.chefEquipe.nom }}
                                    <small class="text-muted">({{ equipe.chefEquipe.email }})</small>
                                {% else %}
                                    <span class="text-muted">Aucun chef assigné</span>
                                {% endif %}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            {% if equipe.affectations|length > 0 %}
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="mb-0">Affectations de l'équipe</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Chantier</th>
                                        <th>Utilisateur</th>
                                        <th>Début</th>
                                        <th>Fin</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for affectation in equipe.affectations %}
                                        <tr>
                                            <td>{{ affectation.chantier ? affectation.chantier.nom : 'N/A' }}</td>
                                            <td>{{ affectation.user ? affectation.user.nom : 'N/A' }}</td>
                                            <td>{{ affectation.dateDebut ? affectation.dateDebut|date('d/m/Y') : 'N/A' }}</td>
                                            <td>{{ affectation.dateFin ? affectation.dateFin|date('d/m/Y') : 'N/A' }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Compétences de l'équipe</h6>
                </div>
                <div class="card-body">
                    {% if equipe.competanceEquipe|length > 0 %}
                        {% for competence in equipe.competanceEquipe %}
                            <span class="badge bg-primary me-1 mb-1">{{ competence }}</span>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted mb-0">Aucune compétence définie</p>
                    {% endif %}
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" 
                           class="btn btn-warning">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <form method="post" 
                              action="{{ path('app_equipe_delete', {'id': equipe.id}) }}" 
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
                            <button class="btn btn-danger w-100" type="submit">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}