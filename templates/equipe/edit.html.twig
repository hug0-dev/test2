{% extends 'base.html.twig' %}

{% block title %}Modifier l'Équipe{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">✏️ Modifier l'Équipe</h2>
            <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary mb-3">← Retour à la liste</a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">{{ equipe.nomEquipe }}</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        
                        <div class="mb-3">
                            {{ form_label(form.nom_equipe) }}
                            {{ form_widget(form.nom_equipe, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom_equipe) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.nombre) }}
                            {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nombre) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.chef_equipe) }}
                            {{ form_widget(form.chef_equipe, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.chef_equipe) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.competance_equipe, 'Compétences de l\'équipe') }}
                            <div class="form-check-container">
                                {{ form_widget(form.competance_equipe) }}
                            </div>
                            {{ form_errors(form.competance_equipe) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Modifier l'équipe</button>
                            <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" class="btn btn-info">Voir l'équipe</a>
                            <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary">Annuler</a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.form-check-container {
    max-height: 300px;
    overflow-y: auto;
    border: 1px solid #ced4da;
    border-radius: 0.375rem;
    padding: 0.5rem;
}

.form-check {
    margin-bottom: 0.25rem;
}
</style>
{% endblock %}